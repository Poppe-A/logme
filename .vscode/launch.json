{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Logme-backend: Attach to Node debugger",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "localRoot": "${workspaceFolder:Root}/apps/backend",
      "remoteRoot": "/app/apps/backend",
      "skipFiles": ["<node_internals>/**"],
      "timeout": 10000,
      "sourceMaps": true,
      "protocol": "inspector",
      "outFiles": ["${workspaceFolder:Root}/apps/backend/dist/**/*.js"],
      "resolveSourceMapLocations": [
        "${workspaceFolder:Root}/apps/backend/**",
        "!**/node_modules/**"
      ],
      "smartStep": true,
      "trace": "verbose"
    }
  ]
}
